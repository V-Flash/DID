<script>
    // Get all thumbnail images
    const thumbnailImages = document.querySelectorAll(".thumbnail-img");

    // Open lightbox gallery on thumbnail image click
    thumbnailImages.forEach(image => {
        image.addEventListener("click", function(event) {
            // Prevent the default behavior of the click event
            event.preventDefault();

            // Open the lightbox gallery here using your preferred gallery library or custom code
            // For example, you can use Lightbox2, Fancybox, or create a custom lightbox function.
            // Replace the line below with the appropriate code to open the gallery.
            console.log("Open lightbox gallery for image:", image.src);
        });
    });
</script>
