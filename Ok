<!-- Add an empty container for modals -->
<div id="modalsContainer"></div>

<!-- Button to trigger dynamic modals -->
<button type="button" class="btn btn-primary" id="launchDynamicModals">
  Launch Dynamic Modals
</button>

<script>
  var names = ["Naruto", "Luffy", "Zoro", "Hitachi"];

  function populateModalOkDiv(modalId, name) {
    var okDiv = document.querySelector(`${modalId} .modal-body .ok`);
    okDiv.textContent = name;
  }

  // Create and populate dynamic modals
  function createDynamicModals() {
    var modalsContainer = document.getElementById('modalsContainer');

    names.forEach(function(name, index) {
      var modalId = `exampleModal${index}`;
      var modalContent = `
        <div class="modal fade" id="${modalId}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                <div class="ok"></div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
              </div>
            </div>
          </div>
        </div>
      `;
      modalsContainer.insertAdjacentHTML('beforeend', modalContent);

      // Populate "ok" div with the corresponding name
      populateModalOkDiv(`#${modalId}`, name);
    });
  }

  // Event listener for button click to create dynamic modals
  var launchDynamicModalsButton = document.getElementById('launchDynamicModals');
  launchDynamicModalsButton.addEventListener('click', function() {
    createDynamicModals();
  });
</script>
