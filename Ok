/* Add these styles for the active class */
.link.active {
    background-color: #007bff; /* Change to your desired active background color */
    color: #fff; /* Change to your desired active text color */
}

.link.active .link-icon {
    background-color: transparent; /* Remove the background for the active icon */
}

.link.active:hover,
.link.active:focus {
    width: 130px; /* Maintain the active width on hover/focus */
}
