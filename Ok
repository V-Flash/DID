<script>
    document.addEventListener("DOMContentLoaded", function () {
        const editButton = document.getElementById("edit_button");
        const submitButton = document.getElementById("submit_button");
        const greetingInput = document.getElementById("greeting");
        const contentTextarea = document.getElementById("content");

        editButton.addEventListener("click", function () {
            // Enable editing and disable edit button
            greetingInput.removeAttribute("readonly");
            contentTextarea.removeAttribute("readonly");
            editButton.disabled = true;
            // Enable the "Update Profile" button
            submitButton.removeAttribute("disabled");
        });

        submitButton.addEventListener("click", function () {
            // Disable editing and enable edit button
            greetingInput.setAttribute("readonly", true);
            contentTextarea.setAttribute("readonly", true);
            editButton.disabled = false;
            // Disable the "Update Profile" button
            submitButton.disabled = true;
        });
    });
</script>
