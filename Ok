from django.shortcuts import render, redirect
from .models import Profile

def update_profile(request):
    # Get the current user's profile (you may need to adjust this depending on your authentication setup)
    profile = Profile.objects.get(user=request.user)
    success_message = None

    if request.method == 'POST':
        # Update the profile fields based on form data
        profile.greeting = request.POST['greeting']
        profile.content = request.POST['content']
        profile.save()
        success_message = 'Profile updated successfully'  # Set the success message

    return render(request, 'update_profile.html', {'profile': profile, 'success_message': success_message})
