<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dynamic Slide Content</title>
  <!-- Add the Swiper CSS -->
  <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
  <style>
    /* Add your CSS styles here */
  </style>
</head>
<body>
  <!-- Add your HTML content here -->
  <div class="swiper-container home-swiper">
    <div class="swiper-wrapper">
      <!-- Slide 1 -->
      <div class="swiper-slide">
        <h2 id="slide-title">Slide 1 Title</h2>
        <p id="slide-description">Slide 1 Description</p>
        <img id="slide-image" src="path/to/slide1-image.jpg" alt="Slide 1 Image">
      </div>

      <!-- Slide 2 -->
      <div class="swiper-slide">
        <h2 id="slide-title">Slide 2 Title</h2>
        <p id="slide-description">Slide 2 Description</p>
        <img id="slide-image" src="path/to/slide2-image.jpg" alt="Slide 2 Image">
      </div>

      <!-- Add more slides as needed -->
    </div>

    <!-- Add Swiper Pagination -->
    <div class="swiper-pagination"></div>
  </div>

  <!-- Add the Swiper JavaScript -->
  <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
  <script>
    // Add your JavaScript code here
    let homeSwiper = new Swiper(".home-swiper", {
      spaceBetween: 30,
      loop: true,
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
    });

    homeSwiper.on("slideChange", function () {
      const activeIndex = homeSwiper.realIndex;

      switch (activeIndex) {
        case 0:
          document.getElementById("slide-title").innerText = "Slide 1 Title";
          document.getElementById("slide-description").innerText = "Slide 1 Description";
          document.getElementById("slide-image").src = "path/to/slide1-image.jpg";
          break;

        case 1:
          document.getElementById("slide-title").innerText = "Slide 2 Title";
          document.getElementById("slide-description").innerText = "Slide 2 Description";
          document.getElementById("slide-image").src = "path/to/slide2-image.jpg";
          break;

        // Add cases for other slide indexes as needed

        default:
          // Default case when no matching slide index is found
          break;
      }
    });
  </script>
</body>
</html>
