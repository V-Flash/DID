<head>
    <!-- Add your meta tags, CSS links, and other head elements here -->
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <style>
        /* Add your CSS styles here */
    </style>
</head>

<body>
    <!-- Your website content goes here -->

    <!-- Swiper Slider -->
    <div class="swiper-container home-swiper">
        <div class="swiper-wrapper">
            <!-- Slide 1 -->
            <div class="swiper-slide">
                <div class="favorite-category">
                    <img src="path/to/favorite-image-1.jpg" alt="Favorite Image 1">
                    <h2>Favorite Category Item 1</h2>
                </div>
            </div>

            <!-- Slide 2 -->
            <div class="swiper-slide">
                <div class="favorite-category">
                    <img src="path/to/favorite-image-2.jpg" alt="Favorite Image 2">
                    <h2>Favorite Category Item 2</h2>
                </div>
            </div>

            <!-- Add more slides as needed -->
        </div>

        <!-- Pagination -->
        <div class="swiper-pagination"></div>

        <!-- Navigation arrows -->
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
    </div>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/Swiper/8.4.2/swiper-bundle.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/scrollReveal.js/4.0.9/scrollreveal.min.js"></script>

    <script>
        /* Your JavaScript code goes here */
        document.addEventListener("DOMContentLoaded", function () {
            /* HOME SWIPER */
            let homeSwiper = new Swiper(".home-swiper", {
                spaceBetween: 30,
                loop: true,
                pagination: {
                    el: ".swiper-pagination",
                    clickable: true
                },
                navigation: {
                    nextEl: ".swiper-button-next",
                    prevEl: ".swiper-button-prev"
                },
                on: {
                    slideChange: function () {
                        const activeIndex = this.activeIndex;
                        const favoriteImages = [
                            "path/to/favorite-image-1.jpg",
                            "path/to/favorite-image-2.jpg",
                            // Add more image paths as needed
                        ];
                        const favoriteTexts = [
                            "Favorite Category Item 1",
                            "Favorite Category Item 2",
                            // Add more texts as needed
                        ];

                        // Update the favorite category item's image and text based on the active slide index
                        document.querySelector(".favorite-category img").src = favoriteImages[activeIndex];
                        document.querySelector(".favorite-category h2").innerText = favoriteTexts[activeIndex];
                    }
                }
            });

            /* ... Your existing code for other functionalities ... */
        });
    </script>
</body>

