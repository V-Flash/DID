/* Initial state for the collapsible elements */
.collapse {
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s ease-in-out; /* You can adjust the duration and timing function as needed */
}

/* When the .show class is added, expand the dropdown */
.collapse.show {
  max-height: 1000px; /* Use a sufficiently large value to ensure it can fully expand */
}
