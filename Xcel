<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Website</title>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <style>
        /* Add your CSS styles for the dropdown here */
        .sidebar-navigation ul ul {
            display: none;
        }
    </style>
</head>
<body>

<nav id="sidebar" class="sidebar-wrapper">
    <!-- Your existing HTML code for the sidebar goes here -->

    <script>
        $(document).ready(function() {
            // Toggle visibility of dropdowns on click
            $('.sidebar-navigation li').click(function(e) {
                var clickedDropdown = $(this).children('ul');
                var allOtherDropdowns = $('.sidebar-navigation li ul').not(clickedDropdown);

                // Close all other dropdowns except the clicked one
                allOtherDropdowns.slideUp();

                // Toggle visibility of the clicked dropdown
                clickedDropdown.slideToggle();

                // Prevent event propagation to parent dropdowns
                e.stopPropagation();
            });

            // Prevent following the link for items with dropdowns
            $('.sidebar-navigation li:has(ul) > a').click(function(e) {
                e.preventDefault();
            });
        });
    </script>
</body>
</html>
