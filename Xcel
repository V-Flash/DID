<script>
jQuery(document).ready(function($) {
    $('.wqpmb_input_text').on('change keyup paste', function () {
        var newQuantity = $('.wqpmb_input_text').val();
        console.log('New Quantity:', newQuantity); // Debugging output
        $('.jb_single_cart_btn').attr("data-quantity", newQuantity);
    });
});
</script>
