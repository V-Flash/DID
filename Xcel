<!-- Include jQuery library -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<!-- Include AOS library -->
<script src="path/to/aos.js"></script>

<!-- Your HTML code -->

<script>
  $(document).ready(function() {
    // Initialize AOS
    AOS.init();

    // Add an event listener to the tab to reinitialize AOS when the tab is shown
    $('#nav-tab').on('shown.bs.tab', function (e) {
      AOS.refresh();
    });

    // Add an event listener to check if the user has scrolled to the nav-tab section
    $(window).on('scroll', function() {
      var navTabSection = $('.container[data-aos="fade-up"]');
      var windowHeight = $(window).height();
      var scrollTop = $(window).scrollTop();

      if (scrollTop + windowHeight > navTabSection.offset().top) {
        AOS.refresh();
      }
    });
  });
</script>
