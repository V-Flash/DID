<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="path/to/your/css/style.css">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/color-thief/2.3.0/color-thief.umd.js"></script>
    <title>Your Website</title>
</head>
<body>

<!-- Your HTML content -->
<section class="section-in-view" style="background-color: orange;">
    <!-- Content of the section -->
    <img src="path/to/image1.jpg" alt="Background Image">
</section>

<section class="section-in-view" style="background-image: url('path/to/image2.jpg');">
    <!-- Content of the section -->
</section>

<section class="section-in-view" style="background-color: purple;">
    <!-- Content of the section -->
    <img src="path/to/image3.jpg" alt="Background Image">
</section>

<button class="btn menu-icon" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasTop" style="position: fixed;">
    <img class="img-fluid" src="assets/img/logo.png" width="75em" height="100%"> Ford Mustang
</button>

<script>
    $(document).ready(function () {
        updateMenuIconColor();

        // Listen for scroll events
        $(window).scroll(function () {
            updateMenuIconColor();
        });

        function updateMenuIconColor() {
            // Get the current background color of the section in view
            var currentSectionColor = getSectionColorInViewport();

            // Update the background color of the menu-icon button
            $('.menu-icon').css('background-color', currentSectionColor);
        }

        function getSectionColorInViewport() {
            var currentSectionColor;

            // Check if the section has a background image
            var backgroundImage = $('.section-in-view').css('background-image');
            if (backgroundImage && backgroundImage !== 'none') {
                // Get the dominant color of the background image
                var colorThief = new ColorThief();
                var image = $('.section-in-view').find('img')[0];
                
                // Check if the image is loaded
                if (image.complete) {
                    var dominantColor = colorThief.getColor(image);

                    // Convert RGB values to CSS color format
                    currentSectionColor = `rgb(${dominantColor[0]}, ${dominantColor[1]}, ${dominantColor[2]})`;
                } else {
                    // Handle the case where the image is not yet loaded
                    currentSectionColor = ''; // Set a default color or handle accordingly
                }
            } else {
                // Get the background color of the section
                currentSectionColor = $('.section-in-view').css('background-color');
            }

            return currentSectionColor;
        }
    });
</script>

</body>
</html>
