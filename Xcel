<form class="woocommerce-ordering" method="get">
    <div class="price-selection float-right">
        <div class="select-title">Sort By</div>
        <select name="orderby" class="orderby form-select" aria-label="<?php esc_attr_e( 'Shop order', 'woocommerce' ); ?>">
            <?php
            $catalog_orderby_options = array(
                'title-az' => esc_html__('Name: A to Z', 'woocommerce'),
                'title-za' => esc_html__('Name: Z to A', 'woocommerce'),
                'price' => esc_html__('Price: Low to High', 'woocommerce'),
                'price-desc' => esc_html__('Price: High to Low', 'woocommerce')
            );

            foreach ($catalog_orderby_options as $id => $name) :
            ?>
                <option value="<?php echo esc_attr($id); ?>" <?php selected($orderby, $id); ?>><?php echo esc_html($name); ?></option>
            <?php endforeach; ?>
        </select>
    </div>
    <input type="hidden" name="paged" value="1" />
    <?php wc_query_string_form_fields(null, array('orderby', 'submit', 'paged', 'product-page')); ?>
</form>
