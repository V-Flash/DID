<?php
$taxonomy = 'pa_weight'; // Replace with the actual taxonomy name for your attribute, typically starts with 'pa_'
$terms = get_terms($taxonomy);

if (!empty($terms)) {
    echo '<ul>';

    foreach ($terms as $term) {
        echo '<li>';
        echo 'Slug: ' . $term->slug . ', ';
        echo 'Term: ' . $term->name;
        echo '</li>';
    }

    echo '</ul>';
} else {
    echo 'No terms found for this attribute.';
}
?>
