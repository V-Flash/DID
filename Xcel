<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Taggd</title>

  <link rel="stylesheet" href="assets/layout.css">
  <link rel="stylesheet" href="../../dist/taggd.css">
  <link rel="stylesheet" href="themes/taggd-classic.css">
</head>
<body>

  <main class="container">
    <img src="../assets/1024x512.jpg" alt="" id="image">
  </main>

  <button id="action-add">Add Tag</button>

  <script src="../../dist/taggd.js"></script>
  <script src="../functions.js"></script>
  <script>
    var image = document.getElementById('image');

    var taggd = new Taggd(image);

    // Manually add tags
    var tags = [
      { x: 0.2, y: 0.4, text: 'Tag 1' },
      { x: 0.5, y: 0.7, text: 'Tag 2' },
      { x: 0.8, y: 0.2, text: 'Tag 3' }
    ];

    taggd.setTags(tags);

    document.getElementById('action-add').addEventListener('click', function addTagManually() {
      // Add a new tag manually
      var newTag = { x: 0.3, y: 0.6, text: 'New Tag' };
      taggd.addTag(newTag);
    });
  </script>

</body>
</html>
