<!-- Your HTML code -->
<nav>
  <div class="nav nav-tabs login-reg justify-content-center" id="nav-tab" role="tablist">
    <button class="nav-link text-muted active" id="login-tab" data-bs-toggle="tab" data-bs-target="#login" type="button" role="tab" aria-controls="info" aria-selected="false">Login</button>
    <button class="nav-link text-muted" id="register-tab" data-bs-toggle="tab" data-bs-target="#register" type="button" role="tab" aria-controls="register" aria-selected="false">Register</button>
  </div>
</nav>

<div class="col-md-12 text-center banner-content">
  <h1 class="banner-title">Login</h1>
  
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb d-flex justify-content-center mb-0">
      <li class="breadcrumb-item"><a href="index.html" class="text-muted">Home</a></li>
      <li class="breadcrumb-item active">Login</li>
    </ol>
  </nav>
</div>

<script>
  $(document).ready(function() {
    $('.nav-tabs button').on('click', function() {
      // Remove active class from previous elements
      $('.nav-tabs button').removeClass('active');
      $('.breadcrumb-item').removeClass('active');
      
      // Add active class to the clicked tab and breadcrumb
      $(this).addClass('active');
      $('.breadcrumb-item').text($(this).text()).addClass('active');
      
      // Update banner title
      $('.banner-title').text($(this).text());
    });
  });
</script>
