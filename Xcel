        /* Add your CSS styles here */
    </style>
</head>
<body>
<div class="accordion style-2 margin-bottom-30">
    <!-- Your existing accordion items go here -->
    <div class="accordion-item">
        <h6 class="a-title main but">Q6. Another Individual Question<span class="plusminus">+</span></h6>
        <div class="a-content content" style="display:none;">
            <div class="wrapper">
                <p class="pb20">Answer: This is an individual question's answer.</p>
            </div>
        </div>
    </div>
</div>

<button id="expandAllButton">Expand All</button>
<button id="closeAllButton">Close All</button>

<script>
    $(document).ready(function() {
        // Function to expand all accordion items with a slide-down effect
        $("#expandAllButton").click(function() {
            $(".a-content").slideDown(300);
        });

        // Function to close all accordion items with a slide-up effect
        $("#closeAllButton").click(function() {
            $(".a-content").slideUp(300);
        });

        // Toggle individual accordion items when their titles are clicked
        $(".a-title").click(function() {
            var content = $(this).next(".a-content");
            content.slideToggle(300);

            // Close other accordion items
            $(".a-content").not(content).slideUp(300);
        });
    });
</script>
</body>
</html>
