<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <title>Quantity Update</title>
</head>
<body>
<div class="list-box">list-box  
    <button class="grid">grid</button>
    <button class="list">list</button>
</div>

<div class="grid-box">grid-box
    <button class="grid">grid</button>
    <button class="list">list</button>
</div>

<script>
$(document).ready(function(){
    // Check if there's a user preference in local storage
    const userPreference = localStorage.getItem('viewPreference');

    // If user preference is 'grid', show grid view, otherwise show list view
    if (userPreference === 'grid') {
        $("#grid-item").show();
        $(".grid-box").show();
        $(".grid-weight").show();
        $("#list-item").hide();
        $(".list-box").hide();
    } else {
        $("#grid-item").hide();
        $(".grid-box").hide();
        $(".grid-weight").hide();
        $("#list-item").show();
        $(".list-box").show();
    }

    $(".grid").click(function(){
        // Save user preference in local storage
        localStorage.setItem('viewPreference', 'grid');
        $("#grid-item").show();
        $(".grid-box").show();
        $(".grid-weight").show();
        $("#list-item").hide();
        $(".list-box").hide();
    });

    $(".list").click(function(){
        // Save user preference in local storage
        localStorage.setItem('viewPreference', 'list');
        $("#grid-item").hide();
        $(".grid-box").hide();
        $(".grid-weight").hide();
        $("#list-item").show();
        $(".list-box").show();
    });
});
</script>
</body>
</html>
