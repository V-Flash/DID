$('body').on('click', '.nav-link-dropdown', function(e) {
  e.preventDefault();

  var $this = $(this);
  var $parentListItem = $this.closest('li');
  var $collapse = $parentListItem.find('.collapse');

  if ($collapse.hasClass('show')) {
    $this.removeClass('active');
    $collapse.slideUp(300); // Adjust the duration (in milliseconds) to control the speed of the animation
  } else {
    $this.addClass('active');
    $collapse.slideDown(300); // Adjust the duration (in milliseconds) to control the speed of the animation
  }
});
