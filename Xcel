    <div id="GlucoseContent" class="margin-left-pro tab-content">
        <!-- ... Existing Glucose content ... -->
    </div>

    <!-- Content for Nice Tab (hidden by default) -->
    <div id="NiceContent" class="margin-left-pro tab-content" style="display: none;">
        <!-- ... Nice content ... -->
    </div>

    <!-- Content for Cream Tab (hidden by default) -->
    <div id="CreamContent" class="margin-left-pro tab-content" style="display: none;">
        <!-- ... Cream content ... -->
    </div>
</div>

<div class="col-lg-3 col-md-4 order-md-1 wow fadeInUp" data-wow-duration=".2s" data-wow-delay=".5s">
    <div class="pro-auto-side-bar">
        <ul class="nav nav-tabs tabs-left">
            <li class="active">
                <a href="#GlucoseContent">Glucose <span class="more-arrow"><i class="fa fa-caret-right"></i></span></a>
            </li>
            <li>
                <a href="#NiceContent">Nice <span class="more-arrow"><i class="fa fa-caret-right"></i></span></a>
            </li>
            <li>
                <a href="#CreamContent">Cream <span class="more-arrow"><i class="fa fa-caret-right"></i></span></a>
            </li>
        </ul>
    </div>
