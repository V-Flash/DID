function add_custom_weight_unit_field() {
    echo '<div class="options_group">';

    woocommerce_wp_select(
        array(
            'id' => '_weight_unit',
            'label' => __('Weight Unit', 'text-domain'),
            'options' => array(
                'g' => 'Grams',
                'kg' => 'Kilograms',
            ),
        )
    );

    echo '</div>';
}
add_action('woocommerce_product_options_shipping', 'add_custom_weight_unit_field');
