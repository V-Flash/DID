<script>
  $(document).ready(function() {
    // Add anin-active class to carousel-caption on page load
    $('.carousel-caption').addClass('anin-active');

    // Add an event listener to the carousel to detect slide changes
    $('#carouselExample').on('slid.bs.carousel', function() {
      // Remove anin-active class from all carousel-caption elements
      $('.carousel-caption').removeClass('anin-active');
      // Add anin-active class to the currently active carousel-caption
      $('.carousel-item.active .carousel-caption').addClass('anin-active');
    });
  });
</script>
