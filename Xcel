jQuery(document).ready(function($) {
  // Get all elements with class ut_single_cart_btn
  var utButtons = document.querySelectorAll('.ut_single_cart_btn');

  // Get all elements with class inputdata
  var inputdataFields = document.querySelectorAll('.inputdata');

  // Create an empty object to store associations
  var associations = {};

  // Map the associations based on the data-associate attribute
  utButtons.forEach(function(utButton) {
    var associationKey = utButton.getAttribute('data-associate');
    associations[associationKey] = utButton;
  });

  // Loop through the inputdataFields and attach event listeners
  inputdataFields.forEach(function(inputdataField) {
    var associationKey = inputdataField.getAttribute('data-associate');
    var utButton = associations[associationKey];

    if (utButton) {
      // Attach event listener to the input field
      $(inputdataField).on('change keyup paste', function() {
        // Update the data-quantity attribute of the associated utButton
        $(utButton).attr("data-quantity", $(inputdataField).val());
      });
    }
  });
});
