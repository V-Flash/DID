<!DOCTYPE html>
<html lang="en">

<head>
  <style type="text/css">
    .curved-text span {
      display: inline-block;
      transition: transform 1s ease, opacity 1s ease;
    }

    .scroll-curve {
      transform-origin: center bottom;
      display: inline-block;
      white-space: nowrap;
      overflow: hidden;
      font-size: 55px;
      color: green;
    }
  </style>
</head>

<body>
  <div class="scroll-curve">
    <span>G</span>
    <span>e</span>
    <span>e</span>
    <span>k</span>
    <span>s</span>
    <span>f</span>
    <span>o</span>
    <span>r</span>
    <span>G</span>
    <span>e</span>
    <span>e</span>
    <span>k</span>
    <span>s</span>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      var textContainer = document.querySelector('.scroll-curve');
      var textSpans = document.querySelectorAll('.scroll-curve span');
      var initialTransform = Array.from(textSpans).map(span => getComputedStyle(span).transform);

      document.addEventListener("scroll", function () {
        var scrollPosition = window.scrollY;
        var curveAmount = scrollPosition / 10;
        var opacity = 1 - scrollPosition / 500;

        textContainer.style.transform = `perspective(500px) rotateX(${curveAmount}deg)`;
        textSpans.forEach((span, index) => {
          span.style.transform = initialTransform[index] + ` rotate(${curveAmount}deg)`;
          span.style.opacity = opacity;
        });
      });
    });
  </script>
</body>

</html>
