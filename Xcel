  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.js"></script>

  <script>
    $('#carouselExampleCaptions').on('slide.bs.carousel', function () {
      // Remove the 'animate__fadeIn' class from all captions
      $('.carousel-caption').removeClass('animate__fadeIn');
    });

    $('#carouselExampleCaptions').on('slid.bs.carousel', function () {
      // Add the 'animate__fadeIn' class to the active carousel caption
      $('.carousel-item.active .carousel-caption').addClass('animate__fadeIn');
    });
  </script>
</div>
