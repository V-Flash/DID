jQuery(document).ready(function($) {
  // Get all elements with the class .ut_single_cart_btn.input
  var elementsWithBothClasses = document.querySelectorAll(".ut_single_cart_btn.input");

  // Initialize arrays to store IDs
  var testIds = [];
  var intestIds = [];

  // Loop through all the elements
  elementsWithBothClasses.forEach(function(element) {
    // Get the IDs directly from the elements
    var testId = $(element).data("test-id");
    var intestId = $(element).data("intest-id");

    // Push the IDs into their respective arrays
    testIds.push(testId);
    intestIds.push(intestId);

    // Attach event listener to the intest input field
    $(intestId).on('change keyup paste', function() {
      // Update the data-quantity attribute of the associated test element
      $(testId).attr("data-quantity", $(intestId).val());
    });
  });

  // Now, testIds and intestIds arrays contain the IDs
  // You can access them as needed
  console.log("Test IDs:", testIds);
  console.log("Intest IDs:", intestIds);
});
