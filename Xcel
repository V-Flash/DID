$(document).on("click", function(event) {
  // Check if the clicked element is not a descendant of .shareProduct
  if (!$(event.target).closest('.shareProduct').length && !$(event.target).is('.share-btn')) {
    // Close the .shareProduct if it's currently visible
    if ($('.shareProduct').is(':visible')) {
      $(".shareProduct").slideUp();
    }
  }
});

$(".share-btn").click(function(event){
  event.stopPropagation(); // Prevent the click event from reaching the document and closing .shareProduct immediately
  $(".shareProduct").slideToggle();
});
