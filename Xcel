$taxonomy = 'pa_weight'; // Assuming 'pa_' prefix is used for product attributes
$term = get_term_by('slug', 'your-term-slug', $taxonomy); // Replace 'your-term-slug' with the actual slug

if ($term) {
    $label = wc_attribute_label($taxonomy);
    $slug = $term->slug;

    echo 'Label: ' . $label . '<br>';
    echo 'Slug: ' . $slug;
} else {
    echo 'Term not found';
}
