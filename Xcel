  <span class="heart-icon bi bi-heart"></span>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script type="text/javascript">
  $(".button").click(function() {
    $(this).toggleClass("animate");
    $(this).toggleClass("active");
  });
</script>

