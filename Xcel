  <style>
    .button {
      cursor: pointer;
      display: inline-block;
    }

    .heart-icon {
      color: #0090E3;
      font-size: 2rem;
    }

    .button.active .heart-icon {
      color: transparent;
    }

    .button.animate .heart-icon {
      animation: pulse 1s ease-out infinite;
    }

    @keyframes pulse {
      0% {
        opacity: 1;
        transform-origin: center center;
        transform: scale(1);
      }
      50% {
        opacity: 0.6;
        transform: scale(1.15);
      }
      100% {
        opacity: 1;
        transform: scale(1);
      }
    }
  </style>
