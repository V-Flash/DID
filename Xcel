<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Get all elements with class 'pedagogy-innerpadding'
    var elements = document.querySelectorAll('.pedagogy-innerpadding');

    // Loop through each 'pedagogy-innerpadding' element
    elements.forEach(function(element) {
      // Get the last 'desc-line-2' element within the current 'pedagogy-innerpadding'
      var descLine2 = element.querySelector('.desc-line-2:last-child');

      // Remove the last 'desc-line-2' element if it exists
      if (descLine2) {
        descLine2.remove();
      }
    });
  });
</script>
