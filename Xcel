<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>
$(document).ready(function(){
    // Assuming $test_id is a valid ID received from the URL
    var testId = <?php echo json_encode($test_id); ?>;

    // Loop through each option in the dropdown
    $("#pc_id option").each(function(){
        // Compare the option's value with $test_id
        if ($(this).val() == testId) {
            // If there is a match, make the option selected
            $(this).prop("selected", true);
        }
    });
});
</script>
