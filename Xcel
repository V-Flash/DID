<?php
$faqcatdata = getallfaqcat();
$f = 1;

for ($i = 0; $i < count($faqcatdata); $i++) {
    $fcat = getallfaqanswerbycategory($faqcatdata[$i]["id"]);

    // Shuffle the answers within the category
    shuffle($fcat);

    // Check if there are answers in the category
    if (count($fcat) > 0) {
        $randomAnswer = $fcat[0]["title"];
        ?>

        <div class="accordion-item">
            <h2 class="a-title main active but3">Q<?php echo $fcat[0]["id"];?>. <?php echo $fcat[0]["title2"];?><span class="plusminus4">-</span></h2>
            <div class="a-content content3">
                <div class="wrapper">
                    <p class="pb20 ans"> <?php echo $randomAnswer; ?></p>
                </div>
            </div>
        </div>

        <?php
    }
}
?>
