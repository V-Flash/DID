<script>
    // Select the third star and mark it as active
    var ratingContainer = document.getElementById("ratingContainer");
    var stars = ratingContainer.querySelectorAll(".ratings i");

    // Assuming you want to select the third star (index 2, as indexing starts from 0)
    var selectedStarIndex = 2;

    // Mark the selected star as active
    stars[selectedStarIndex].classList.add("rating-active");
</script>
