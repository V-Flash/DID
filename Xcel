<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <title>Quantity Update</title>
</head>
<body>
<div class="list-box">list-box  
    <button class="grid">grid</button>
    <button class="list">list</button>
</div>

<div class="grid-box">grid-box
    <button class="grid">grid</button>
    <button class="list">list</button>
</div>

<script>
$(document).ready(function(){
    // Set the default view preference to 'grid'
    localStorage.setItem('viewPreference', 'grid');

    // Function to toggle views
    function toggleViews() {
        const userPreference = localStorage.getItem('viewPreference');
        if (userPreference === 'grid') {
            $("#grid-item").show();
            $(".grid-box").show();
            $(".grid-weight").show();
            $("#list-item").hide();
            $(".list-box").hide();
        } else {
            $("#grid-item").hide();
            $(".grid-box").hide();
            $(".grid-weight").hide();
            $("#list-item").show();
            $(".list-box").show();
        }
    }

    // Call the toggleViews function to set the initial view
    toggleViews();

    $(".grid").click(function(){
        localStorage.setItem('viewPreference', 'grid');
        toggleViews();
    });

    $(".list").click(function(){
        localStorage.setItem('viewPreference', 'list');
        toggleViews();
    });
});
</script>
</body>
</html>
