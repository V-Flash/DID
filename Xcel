<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <title>Interactive Map</title>
</head>
<body>
    <div id="map" style="height: 500px;"></div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script>
        $(document).ready(function () {
            // Sample locations with information
            var locations = [
                { lat: 28.6139, lng: 77.2090, title: 'New Delhi', content: 'Information about New Delhi' },
                // Add more locations as needed
            ];

            // Initialize the map centered at a specific location in India
            var map = L.map('map').setView([20.5937, 78.9629], 5);

            // Add OpenStreetMap as the base layer
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; OpenStreetMap contributors'
            }).addTo(map);

            // Loop through locations and add markers
            locations.forEach(function (location) {
                var marker = L.marker([location.lat, location.lng]).addTo(map);

                // Add a hover box (Bootstrap popover) for each marker
                marker.bindPopup('<div class="popover-content">' +
                    '<h5>' + location.title + '</h5>' +
                    '<p>' + location.content + '</p>' +
                    '</div>');
            });
        });
    </script>
</body>
</html>
