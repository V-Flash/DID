/* Add this CSS to your existing stylesheet or in the head of your HTML document */

.grid-item {
  width: 100%; /* Set the width of the grid items to 100% */
}

.grid-item:nth-child(odd) {
  float: left; /* Float odd items (1st and 3rd) to the left */
}

.grid-item:nth-child(even) {
  float: right; /* Float even items (2nd) to the right */
}
