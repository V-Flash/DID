<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <title>Quantity Update</title>
</head>
<body>
<div class="list-box">list-box  
    <button class="grid">Grid</button>
    <button class="list">List</button>
</div>

<div class="grid-box">grid-box
    <button class="grid">Grid</button>
    <button class="list">List</button>
</div>

<script>
$(document).ready(function(){
    // By default, show the grid view
    $(".grid-box").show();

    // Check if the user previously selected a view
    var selectedView = localStorage.getItem('selectedView');

    if (selectedView === 'list') {
        $(".grid-box").hide();
    } else {
        $(".list-box").hide();
    }

    // Handle the grid button click
    $(".grid").click(function(){
        $(".grid-box").show();
        $(".list-box").hide();

        // Store the user's choice in localStorage
        localStorage.setItem('selectedView', 'grid');
    });

    // Handle the list button click
    $(".list").click(function(){
        $(".grid-box").hide();
        $(".list-box").show();

        // Store the user's choice in localStorage
        localStorage.setItem('selectedView', 'list');
    });
});
</script>
</body>
</html>
