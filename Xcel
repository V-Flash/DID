<body>
<div class="list-box">list-box  


<button class="grid">gird</button>
<button class="list">list</button>

</div>

<div class="grid-box">grid-box


<button class="grid">gird</button>
<button class="list">list</button>

</div>



<script>
$(document).ready(function(){
  $("#list-item").hide();
  $(".list-box").hide();
  $(".grid").click(function(){
    $("#grid-item").show();
    $(".grid-box").show();
    $(".grid-weight").show();
    $("#list-item").hide();
    $(".list-box").hide();
    
  });
  $(".list").click(function(){
     $("#grid-item").hide();
     $(".grid-box").hide();
     $(".grid-weight").hide();
     $("#list-item").show();
     $(".list-box").show();
  });
});
</script>
</body>
</html>
