<script>
  $(document).ready(function(){
    $('.rtl-slider').slick({
      slidesToShow: 1,
      slidesToScroll: 1,
      arrows: false,
      fade: true,
      asNavFor: '.rtl-slider-nav'
    });
    $('.rtl-slider-nav').slick({
      slidesToShow: 2,
      slidesToScroll: 1,
      vertical: true,
      asNavFor: '.rtl-slider',
      centerMode: false,
      focusOnSelect: true,
      prevArrow: ".thumb-prev",
      nextArrow: ".thumb-next",
    });

    // Initialize zoom on images
    $('.zoom').zoom();

    // Initialize Fancybox on the images
    $('.zoom').fancybox({
      thumbs: {
        autoStart: true,
        axis: 'y'
      }
    });
  });
</script>

