jQuery(document).ready(function($) {
  $('.wqpmb_input_text').on('change keyup paste', function() {
    var quantity = $(this).val();
    var productId = $(this).closest('.product').data('product-id'); // Assuming you have a data attribute for product ID on a parent element like ".product"

    // Construct the ID selector for the specific product's button
    var buttonId = '#product-' + productId;

    // Update the data-quantity attribute for the specific product's button
    $(buttonId).attr("data-quantity", quantity);
  });
});
