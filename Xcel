<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Checkbox and Exact Weight Filter</title>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <style>
    /* Add some basic styles for demonstration */
    .product {
      margin: 10px;
      padding: 10px;
      border: 1px solid #ccc;
      display: inline-block;
    }
    .no-products-found {
      font-weight: bold;
      color: red;
    }
  </style>
</head>
<body>
  <h1>Checkbox and Exact Weight Filter</h1>

  <!-- Checkboxes for filtering by category -->
  <label><input type="checkbox" class="filter" data-category="1" checked> 1</label>
  <label><input type="checkbox" class="filter" data-category="2" checked> 2</label>
  <label><input type="checkbox" class="filter" data-category="3" checked> 3</label>
  <label><input type="checkbox" class="filter" data-category="4" checked> 4</label>
  <label><input type="checkbox" class="filter" data-category="5" checked> 5</label>

  <!-- Checkboxes for filtering by exact weight -->
  <label><input type="checkbox" class="weight-filter" data-weight="10" checked> 10g</label>
  <label><input type="checkbox" class="weight-filter" data-weight="20" checked> 20g</label>
  <label><input type="checkbox" class="weight-filter" data-weight="30" checked> 30g</label>

  <!-- Product list -->
  <div class="product" data-categories="1 2" data-weight="10">Product 1 (1, 2, Weight 10g)</div>
  <div class="product" data-categories="2 3" data-weight="15">Product 2 (2, 3, Weight 15g)</div>
  <div class="product" data-categories="1 3" data-weight="20">Product 3 (1, 3, Weight 20g)</div>
  <div class="product" data-categories="4" data-weight="20">Product 4 (4, Weight 20g)</div>
  <div class="product" data-categories="3 4" data-weight="30">Product 5 (3, 4, Weight 30g)</div>
  <div class="product" data-categories="1 2 3" data-weight="35">Product 6 (1, 2, 3, Weight 35g)</div>

  <!-- Message for no products found -->
  <p class="no-products-found" style="display: none;">No products found.</p>

  <script>
    $(document).ready(function() {
      // Handle the initial filter based on checked checkboxes and weight checkboxes
      filterProducts();

      // Listen for changes to checkboxes and weight checkboxes
      $('.filter, .weight-filter').change(function() {
        filterProducts();
      });

      function filterProducts() {
        // Get an array of checked categories
        var checkedCategories = $('.filter:checked').map(function() {
          return $(this).data('category');
        }).get();

        // Get an array of selected exact weights
        var selectedWeights = $('.weight-filter:checked').map(function() {
          return parseInt($(this).data('weight'));
        }).get();

        // Hide all products
        $('.product').hide();

        // Show all products if no checkboxes are checked
        if (checkedCategories.length === 0 && selectedWeights.length === 0) {
          $('.product').show();
          $('.no-products-found').hide();
          return;
        }

        // Show products that match the checked categories and selected exact weights
        var productsToShow = $('.product').filter(function() {
          var productCategories = $(this).data('categories').split(' ').map(Number); // Convert to an array of numbers
          var productWeight = parseInt($(this).data('weight'));

          var categoryMatch = checkedCategories.length === 0 || productCategories.some(category => checkedCategories.includes(category));
          var weightMatch = selectedWeights.length === 0 || selectedWeights.includes(productWeight);

          return categoryMatch && weightMatch;
        });

        // Display "No products found" message if no products match
        if (productsToShow.length === 0) {
          $('.no-products-found').show();
        } else {
          productsToShow.show();
          $('.no-products-found').hide();
        }
      }
    });
  </script>
</body>
</html>
