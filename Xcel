<div class="d-flex gap-3">
    <p class="mb-0">Your rating*</p>
    <div class="review-card card" id="ratingContainer">
        <div class="d-flex">
            <div class="ratings">
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
            </div>
        </div>
    </div>
</div>

<script>
    // Select the star container
    var ratingContainer = document.getElementById("ratingContainer");
    var stars = ratingContainer.querySelectorAll(".ratings i");

    var activeStars = 0; // Variable to store the active stars

    // Add click event listener to each star
    stars.forEach(function(star, index) {
        star.addEventListener("click", function() {
            // Update the active stars on click
            activeStars = index + 1;

            // Remove the "rating-active" class from all stars
            stars.forEach(function(innerStar, innerIndex) {
                innerStar.classList.remove("rating-active");

                // Mark the clicked star and all previous stars as active
                if (innerIndex < activeStars) {
                    innerStar.classList.add("rating-active");
                }
            });
        });

        // Add mouseenter event listener to show hover effect
        star.addEventListener("mouseenter", function() {
            // Remove the "rating-active" class from all stars
            stars.forEach(function(innerStar, innerIndex) {
                innerStar.classList.remove("rating-active");

                // Show hover effect for the hovered star and all previous stars
                if (innerIndex <= index) {
                    innerStar.classList.add("rating-active");
                }
            });
        });

        // Add mouseleave event listener to reset the hover effect on mouse out
        star.addEventListener("mouseleave", function() {
            // Remove the "rating-active" class from all stars on mouse leave
            stars.forEach(function(innerStar) {
                innerStar.classList.remove("rating-active");
            });

            // Set the active stars when mouse leaves based on the click event
            for (var i = 0; i < activeStars; i++) {
                stars[i].classList.add("rating-active");
            }
        });
    });
</script>
