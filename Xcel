<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Checkbox, Price Range, and Exact Weight Filter</title>
  <link rel='stylesheet' href='https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css'>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src='https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.0/jquery-ui.min.js'></script>
  <style>
    /* Add some basic styles for demonstration */
    .product {
      margin: 10px;
      padding: 10px;
      border: 1px solid #ccc;
      display: inline-block;
    }
    .no-products-found {
      font-weight: bold;
      color: red;
    }
    .price-range-slider {
      margin-top: 20px;
    }
  </style>
</head>
<body>
  <h1>Checkbox, Price Range, and Exact Weight Filter</h1>

  <!-- Checkboxes for filtering by category -->
  <label><input type="checkbox" class="filter" data-category="1" checked> 1</label>
  <label><input type="checkbox" class="filter" data-category="2" checked> 2</label>
  <label><input type="checkbox" class="filter" data-category="3" checked> 3</label>
  <label><input type="checkbox" class="filter" data-category="4" checked> 4</label>
  <label><input type="checkbox" class="filter" data-category="5" checked> 5</label>

  <!-- Checkboxes for filtering by exact weight -->
  <label><input type="checkbox" class="weight-filter" data-weight="10" checked> 10g</label>
  <label><input type="checkbox" class="weight-filter" data-weight="20" checked> 20g</label>
  <label><input type="checkbox" class="weight-filter" data-weight="30" checked> 30g</label>

  <!-- Price range slider -->
  <div class="price-range-slider">
    <p class="range-value">
      <input type="text" id="amount" readonly>
    </p>
    <div id="slider-range" class="range-bar"></div>
  </div>

  <!-- Product list -->
  <div class="product" data-categories="1 2" data-weight="10" data-price="250">Product 1 (1, 2, Weight 10g, Price ₹250)</div>
  <div class="product" data-categories="1 2" data-weight="10" data-price="300">Product 1 (1, 2, Weight 10g, Price ₹300)</div>

  <div class="product" data-categories="1 3" data-weight="20" data-price="150">Product 3 (1, 3, Weight 20g, Price ₹150)</div>
  <div class="product" data-categories="4" data-weight="20" data-price="400">Product 4 (4, Weight 20g, Price ₹400)</div>
  <div class="product" data-categories="3 4" data-weight="30" data-price="500">Product 5 (3, 4, Weight 30g, Price ₹500)</div>
  <div class="product" data-categories="3 4" data-weight="30" data-price="100">Product 5 (3, 4, Weight 30g, Price ₹100)</div>

  <!-- Message for no products found -->
  <p class="no-products-found" style="display: none;">No products found.</p>

  <script>
    $(document).ready(function() {
     
      $( "#slider-range" ).slider({
        range: true,
        min: 100,
        max: 500,
        values: [ 100, 500 ],
        slide: function( event, ui ) {
        $( "#amount" ).val( "₹" + ui.values[ 0 ] + " - ₹" + ui.values[ 1 ] );
          filterProducts();
        }
      });
      $( "#amount" ).val( "₹" + $( "#slider-range" ).slider( "values", 0 ) +
        " - ₹" + $( "#slider-range" ).slider( "values", 1 ) );

      // Handle the initial filter based on checked checkboxes, weight, and price range
      filterProducts();

      // Listen for changes to checkboxes, weight checkboxes, and price range
      $('.filter, .weight-filter').change(function() {
        filterProducts();
      });

      function filterProducts() {
        // Get an array of checked categories
        var checkedCategories = $('.filter:checked').map(function() {
          return $(this).data('category').toString();
        }).get();

        // Get an array of selected exact weights
        var selectedWeights = $('.weight-filter:checked').map(function() {
          return parseInt($(this).data('weight'));
        }).get();

        // Get the selected price range
        var priceRange = $( "#slider-range" ).slider( "values" );

        // Hide all products
        $('.product').hide();

        // Show all products if no checkboxes are checked and both handles are at the minimum and maximum
        if (checkedCategories.length === 0 && selectedWeights.length === 100 && priceRange[0] === 100 && priceRange[1] === 500) {
          $('.product').show();
          $('.no-products-found').hide();
          return;
        }

        // Show products that match the checked categories, selected exact weights, and price range
        var productsToShow = $('.product').filter(function() {
          var productCategories = ($(this).data('categories').toString()).split(' ');
          var productWeight = parseInt($(this).data('weight'));
          var productPrice = parseInt($(this).data('price'));

          var categoryMatch = checkedCategories.length === 0 || productCategories.some(category => checkedCategories.includes(category));
          var weightMatch = selectedWeights.length === 0 || selectedWeights.includes(productWeight);
          var priceMatch = (priceRange[0] === 100 && priceRange[1] === 500) || (productPrice >= priceRange[0] && productPrice <= priceRange[1]);

          return categoryMatch && weightMatch && priceMatch;
        });

        // Display "No products found" message if no products match
        if (productsToShow.length === 0) {
          $('.no-products-found').show();
        } else {
          productsToShow.show();
          $('.no-products-found').hide();
        }

        // Update the displayed price range value
        $('#amount').val("₹" + priceRange[0] + " - ₹" + priceRange[1]);
      }
    });
  </script>
</body>
</html>
