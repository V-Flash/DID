var siteMenuClone = function() {
    // ... (Your existing code)

    // Modify the click event handling for .nav-link-dropdown
    $('body').on('click', '.nav-link-dropdown', function(e) {
        var $this = $(this);
        var $parent = $this.closest('.has-children');
        var $target = $parent.find('.collapse');
        
        if ($target.is(':visible')) {
            $target.slideUp(300); // Adjust the animation duration as needed
            $this.find('.arrow-collapse').removeClass('active');
        } else {
            $target.slideDown(300); // Adjust the animation duration as needed
            $this.find('.arrow-collapse').addClass('active');
        }

        e.preventDefault();
    });

    // ... (The rest of your code)
};

siteMenuClone();
