<!DOCTYPE html>
<html>
<head>
    <style>
        /* Add your CSS styles here */

        /* Hide the content of accordion items by default */
        .a-content {
            display: none;
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease-in-out;
        }
    </style>
</head>
<body>
<div class="accordion style-2 margin-bottom-30">
    <!-- Your existing accordion items go here -->
</div>

<button id="expandAllButton">Expand All</button>
<button id="closeAllButton">Close All</button>

<script>
    // Function to expand all accordion items
    document.getElementById("expandAllButton").addEventListener("click", function() {
        var accordionItems = document.querySelectorAll(".accordion-item");
        accordionItems.forEach(function(item) {
            var content = item.querySelector(".a-content");
            content.style.maxHeight = content.scrollHeight + "px";
        });
    });

    // Function to close all accordion items
    document.getElementById("closeAllButton").addEventListener("click", function() {
        var accordionItems = document.querySelectorAll(".accordion-item");
        accordionItems.forEach(function(item) {
            item.querySelector(".a-content").style.maxHeight = "0";
        });
    });
</script>
</body>
</html>
