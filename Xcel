<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jello Effect and Heart Toggle with jQuery</title>
    <style>
        @keyframes jello {
            0% {
                transform: scale3d(1, 1, 1);
            }
            30% {
                transform: scale3d(1.25, 0.75, 1);
            }
            40% {
                transform: scale3d(0.75, 1.25, 1);
            }
            50% {
                transform: scale3d(1.15, 0.85, 1);
            }
            65% {
                transform: scale3d(0.95, 1.05, 1);
            }
            75% {
                transform: scale3d(1.05, 0.95, 1);
            }
            100% {
                transform: scale3d(1, 1, 1);
            }
        }

        .link-btnn-box {
            display: inline-block;
        }

        #wishlistBtn {
            color: #000; /* Default heart color */
        }

        #wishlistBtn.filled-heart {
            color: red; /* Filled heart color */
        }

        #wishlistBtn.jello {
            animation: jello 0.7s;
        }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
</head>
<body>

<div class="link-btnn-box">
    <button id="wishlistBtn" class="btn btn-link link-btnn"><i class="bi bi-heart"></i>&nbsp;Add to Wishlist</button>
</div>

<script>
    $(document).ready(function() {
        $('#wishlistBtn').click(function() {
            // Toggle heart color
            $(this).toggleClass('filled-heart');

            // Add jello effect
            $(this).addClass('jello');

            // Remove jello class after animation completes
            const btn = this;
            setTimeout(function() {
                $(btn).removeClass('jello');
            }, 700); // 700ms is the duration of the jello animation
        });
    });
</script>

</body>
</html>
