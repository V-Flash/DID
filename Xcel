<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link type="text/css" id="aStyleLink" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <title>Theme Switcher</title>
</head>
<body>

    <!-- Theme change buttons -->
    <a href="javascript:void(0)" id="aBlack">Black Theme</a>
    <a href="javascript:void(0)" id="aGreen">Green Theme</a>
    <a href="javascript:void(0)" id="aNormal">Default Theme</a>

    <!-- Your content goes here -->

    <script>
        $(document).ready(function () {
            let darkMode = localStorage.getItem("dark-mode");

            function setTheme(theme) {
                document.getElementById('aStyleLink').href = theme;
                localStorage.setItem("dark-mode", theme);
            }

            $("#aBlack").click(function () {
                setTheme('frontend/css/black-theme.css');
            });

            $("#aGreen").click(function () {
                setTheme('frontend/css/green-theme.css');
            });

            $("#aNormal").click(function () {
                setTheme('');
            });

            // Set the initial theme on page load
            if (darkMode) {
                setTheme(darkMode);
            }
        });
    </script>
</body>
</html>
