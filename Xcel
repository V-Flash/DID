<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<script>
$(document).ready(function() {
    var fixmeTop = $('.fixme').offset().top;
    var fixme = $('.fixme');
    
    function updateHeights() {
        var contentHeight = $('#content').outerHeight();
        var fixmeHeight = fixme.outerHeight();
        
        $(window).scroll(function() {
            var currentScroll = $(window).scrollTop();
    
            if (currentScroll >= fixmeTop && currentScroll <= (contentHeight - fixmeHeight)) {
                fixme.css({
                    position: 'fixed',
                    top: '150px'
                });
            } else {
                fixme.css({
                    position: 'static'
                });
            }
        });
    }

    // Initial heights setup
    updateHeights();

    // Update heights when window is resized
    $(window).resize(function() {
        updateHeights();
    });

    // Update heights when accordion is opened/closed (adjust this based on your accordion implementation)
    $('.accordion').on('click', function() {
        updateHeights();
    });
});
</script>
