<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        // Add 'active' class to the first tab and show its content by default
        $('.tab:first').addClass('active');
        $('.tab-content').hide();
        $($('.tab:first').data('tab')).show();

        // Handle tab click event
        $('.tab').click(function () {
            // Remove 'active' class from all tabs
            $('.tab').removeClass('active');

            // Add 'active' class to the clicked tab
            $(this).addClass('active');

            // Hide all tab content with fade effect
            $('.tab-content').fadeOut('fast');

            // Show the selected tab content with fade effect
            var targetTab = $(this).data('tab');
            $(targetTab).fadeIn('fast');

            // Update the breadcrumb with the text of the active tab
            $('#activeTabBreadcrumb').text($(this).text());
        });
    });
</script>
