<script>
  $(document).ready(function() {
    // Function to add anin-active class to the active carousel-caption
    function addAninActiveClass() {
      $('.carousel-caption').removeClass('anin-active');
      $('.carousel-item.active .carousel-caption').addClass('anin-active');
    }

    // Add anin-active class to carousel-caption on page load
    addAninActiveClass();

    // Add an event listener to the carousel to detect slide changes
    $('#carouselExample').on('slid.bs.carousel', function() {
      // Add anin-active class after the transition to the next slide is complete
      addAninActiveClass();
    });

    // Add an event listener to the carousel to detect the start of slide transition
    $('#carouselExample').on('slide.bs.carousel', function() {
      // Add anin-active class with a slight delay
      setTimeout(function() {
        addAninActiveClass();
      }, 50);
    });

    // Optionally, you can also add the class when clicking on carousel controls manually
    $('.carousel-control-next').click(function() {
      addAninActiveClass();
    });
  });
</script>
