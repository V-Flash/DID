<div class="owl-carousel owl-1 container-pd-pro-lr">
    <div class="item">
        <button class="btn-hello">Click me</button>
    </div>
    <!-- Add more items as needed -->
</div>

<script>
    $(document).ready(function() {
        var owl = $('.owl-1');

        owl.owlCarousel({
            // Your existing configuration
            nav: true,
            dots: true,
            // ... other options
            responsive: {
                0: { items: 1, loop: true },
                680: { items: 2, loop: true },
                1024: { items: 3, loop: true, margin: 0 },
                1600: { items: 4, loop: true, margin: 0 }
            },
            onChanged: function(event) {
                // Get the current index when the carousel changes
                var currentPosition = event.item.index;

                // Do something with the current position (e.g., alert or console.log)
                console.log('Current position:', currentPosition);
            }
        });

        // You can still have a separate button click event if needed
        $('.btn-hello').on('click', function() {
            var currentIndex = $(this).data('owl-index');
            alert('Button in item at index ' + currentIndex + ' clicked!');
        });
    });
</script>
