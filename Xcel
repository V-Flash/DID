<script>
  $(document).ready(function() {
    adjustLayout();

    // Handle window resize
    $(window).resize(function() {
      adjustLayout();
    });

    function adjustLayout() {
      var screenWidth = $(window).width();

      if (screenWidth <= 1000) {
        // Remove <br> tags
        $('.mb-3 br').remove();
      } else {
        // Add <br> tags after each anchor tag except the last one
        $('.mb-3 a.contact-link:not(:last-child)').after('<br>');
      }
    }
  });
</script>

