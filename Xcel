<!DOCTYPE html>
<html>
<head>
    <style>
        /* Add your CSS styles here */
        .a-content {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease-in-out;
        }
    </style>
</head>
<body>
<div class="accordion style-2 margin-bottom-30">
    <!-- Your existing accordion items go here -->
</div>

<button id="expandAllButton">Expand All</button>
<button id="closeAllButton">Close All</button>

<script>
    var accordionItems = document.querySelectorAll(".accordion-item");

    // Function to expand all accordion items with a slide-down effect
    document.getElementById("expandAllButton").addEventListener("click", function() {
        accordionItems.forEach(function(item) {
            var content = item.querySelector(".a-content");
            content.style.maxHeight = content.scrollHeight + "px";
        });
    });

    // Function to close all accordion items with a slide-up effect
    document.getElementById("closeAllButton").addEventListener("click", function() {
        accordionItems.forEach(function(item) {
            var content = item.querySelector(".a-content");
            content.style.maxHeight = "0";
        });
    });

    // Toggle accordion item when its title is clicked
    accordionItems.forEach(function(item) {
        var title = item.querySelector(".a-title");

        title.addEventListener("click", function() {
            var content = item.querySelector(".a-content");
            if (content.style.maxHeight) {
                content.style.maxHeight = null;
            } else {
                content.style.maxHeight = content.scrollHeight + "px";
            }
        });
    });
</script>
</body>
</html>
