$(function() {
    $("#slider-range").slider({
        range: true,
        min: 2500,
        max: 12000,
        values: [0, 12000],
        slide: function(event, ui) {
            $("#amount").val("Min: " + ui.values[0] + " - Max: " + ui.values[1]);
        }
    });

    $("#amount").val("Min: " + $("#slider-range").slider("values", 0) +
        " - Max: " + $("#slider-range").slider("values", 1));
});
