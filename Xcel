var lastScrollTop = 0;
    var isScrollingUp = false;

    $(window).scroll(function () {
        var scrollTop = $(this).scrollTop();

        if (scrollTop > lastScrollTop) {
           
            if (isScrollingUp) {
                
                isScrollingUp = false;
                $(".header").removeClass("header_sticky-active");
               
            }
        } else {
            
            if (!isScrollingUp) {
                $(".header").addClass("header_sticky-active");
                isScrollingUp = true;
                
            }
        }

        // Update last scroll position
        lastScrollTop = scrollTop;
    });

      
