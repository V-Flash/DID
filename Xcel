<script type="text/javascript">
  $(".search-open").click(function() {
    var menuSearchContainer = $(".menu-search-container");
    var navIcon = $(".nav-icon");

    if (menuSearchContainer.is(":hidden")) {
      // Slide down with fade effect
      menuSearchContainer.slideDown(function() {
        // Change icon class after slideDown is complete
        navIcon.fadeToggle().removeClass("bi-search").addClass("bi-x");
      });
    } else {
      // Slide up with fade effect
      menuSearchContainer.slideUp(function() {
        // Change icon class after slideUp is complete
        navIcon.fadeToggle().removeClass("bi-x").addClass("bi-search");
      });
    }
  });
</script>

<ul class="navbar-nav ml-auto nav-3 justify-content-center">
  <button type="button" class="btn btn-link search-open nav-btn-link position-relative">
    <div>
      <i class="bi bi-search nav-icon"></i>
    </div>
    <div class="ml-20"></div>
  </button>
  <i class="bi nav-icon" style="display: none;"></i>
</ul>
