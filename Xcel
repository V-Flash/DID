<div class="d-flex gap-3">
    <p class="mb-0">Your rating*</p>
    <div class="review-card card" id="ratingContainer">
        <div class="d-flex">
            <div class="ratings">
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
                <i class="fa fa-star"></i>
            </div>
        </div>
    </div>
</div>

<script>
    // Select the star container
    var ratingContainer = document.getElementById("ratingContainer");
    var stars = ratingContainer.querySelectorAll(".ratings i");

    // Add mouseenter event listener to each star
    stars.forEach(function(star, index) {
        star.addEventListener("mouseenter", function() {
            // Remove the "rating-active" class from all stars
            stars.forEach(function(innerStar) {
                innerStar.classList.remove("rating-active");
            });

            // Mark the hovered star and all previous stars as active
            for (var i = 0; i <= index; i++) {
                stars[i].classList.add("rating-active");
            }
        });

        // Add mouseleave event listener to reset the stars on mouse out
        star.addEventListener("mouseleave", function() {
            // Remove the "rating-active" class from all stars on mouse leave
            stars.forEach(function(innerStar) {
                innerStar.classList.remove("rating-active");
            });
        });
    });
</script>
