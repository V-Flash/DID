  <title>Scroll Counter</title>
  <style>
    body {
      height: 1500px; /* Add enough content to make scrolling possible */
    }

    .mobile-space {
      height: 500px; /* Adjust the height based on your section's content */
      border: 1px solid #ccc;
      margin-bottom: 20px;
    }
  </style>
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <script src="https://cdn.rawgit.com/graingert/WOW/1.0.1/dist/wow.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-countto/1.2.0/jquery.countTo.min.js"></script>
</head>
<body>

  <section class="mobile-space" id="counter-section">
    <div class="red-bg01 wow fadeInUp" data-wow-duration=".2s" data-wow-delay=".4s">
      <div class="container-custom container ">    
        <div class="row">
          <div class="col-lg-12">
            <img src="assets/images/tottle-pro-img.png" class="img-fluid" alt=""/>

            <div class="row total-pro-info">

              <div class="col-lg-3 total-pro-col">
                <p class="para">Total</p>
                <h5 class="title">products</h5>
                <h2 class="num timer" data-counter="2000">2000</h2>
              </div>

              <div class="col-lg-3 total-pro-col">
                <p class="para">Sculpture</p>
                <h5 class="title">artist</h5>
                <h2 class="num timer" data-counter="100">100</h2>
              </div>

              <div class="col-lg-3 total-pro-col">
                <p class="para">Total</p>
                <h5 class="title">products</h5>
                <h2 class="num timer" data-counter="1200">1200</h2>
              </div>

              <div class="col-lg-3 total-pro-col">
                <p class="para">Sculpture</p>
                <h5 class="title">artist</h5>
                <h2 class="num timer" data-counter="120">120</h2>
              </div>

            </div>

