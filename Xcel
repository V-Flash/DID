  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Heart Animation</title>

  <!-- Include Font Awesome CSS (you need to add the link to the Font Awesome CSS file) -->
  <link rel="stylesheet" href="path/to/font-awesome/css/all.min.css">

  <style>
    .button {
      display: inline-block;
      cursor: pointer;
    }

    .heart-stroke,
    .heart-full {
      font-size: 25px;
      color: #0090E3;
      opacity: 1;
      transition: opacity 0.3s ease-in-out;
    }

    .heart-lines {
      stroke: #0090E3;
      stroke-width: 2;
      stroke-linecap: round;
      fill: none;
      display: none;
    }

    .button.active .heart-stroke {
      opacity: 0;
    }

    .button.active .heart-full {
      opacity: 1;
    }

    .button.active .heart-lines {
      display: block;
    }

    .button:not(.active):hover .heart-stroke {
      transform: scale(1.2);
    }

    .button.animate .heart-full {
      animation: heart 0.35s;
    }

    .button.animate .heart-lines {
      animation: lines 0.2s ease-out forwards;
    }

    @keyframes lines {
      0% {
        stroke-dasharray: 6;
        stroke-dashoffset: 16;
      }
      100% {
        stroke-dasharray: 13;
        stroke-dashoffset: 18;
      }
    }

    @keyframes heart {
      0%, 100% {
        transform: scale(1);
      }
      50% {
        transform: scale(1.15);
      }
    }
  </style>
</head>
