<div class="row no-gutters">
    <div class="filtering col-sm-12 text-center">
        <span data-filter="*" class="triangle-span filter-active" onclick="showDiv(this, '*')">All</span>
        <span data-filter=".architecture" class="" onclick="showDiv(this, '.architecture')">Agrochemical</span>
        <span data-filter=".decor" class="" onclick="showDiv(this, '.decor')">Automobile</span>
        <span data-filter=".interior" class="" onclick="showDiv(this, '.interior')">FMCG</span>
        <span data-filter=".food" class="" onclick="showDiv(this, '.food')">Food Product</span>
        <span data-filter=".obd" class="" onclick="showDiv(this, '.obd')">OBD Carry Bags</span>
        <span data-filter=".pharma" class="" onclick="showDiv(this, '.pharma')">Pharmaceuticals</span>
        <span data-filter=".textile" class="" onclick="showDiv(this, '.textile')">Textile</span>
    </div>
</div>

<!-- Hidden divs -->
<div class="content-div">
    <div class="architecture" style="display: none;">Agrochemical content goes here</div>
    <div class="decor" style="display: none;">Automobile content goes here</div>
    <div class="interior" style="display: none;">FMCG content goes here</div>
    <div class="food" style="display: none;">Food Product content goes here</div>
    <div class="obd" style="display: none;">OBD Carry Bags content goes here</div>
    <div class="pharma" style="display: none;">Pharmaceuticals content goes here</div>
    <div class="textile" style="display: none;">Textile content goes here</div>
</div>

<script>
    var previousSpan = null;

    function showDiv(span, filter) {
        var contentDiv = document.querySelector('.content-div');
        var divToShow = contentDiv.querySelector(filter);

        if (previousSpan) {
            previousSpan.classList.remove('filter-active');
        }

        span.classList.add('filter-active');
        contentDiv.childNodes.forEach(function(child) {
            if (child.nodeType === Node.ELEMENT_NODE) {
                child.style.display = 'none';
            }
        });

        if (divToShow) {
            divToShow.style.display = 'block';
            previousSpan = span;
        }
    }
</script>
