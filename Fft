document.addEventListener('DOMContentLoaded', function() {
    // Get the anchor elements by their IDs
    const section1Link = document.getElementById('section1-link');
    const section2Link = document.getElementById('section2-link');

    // Add click event listeners to the anchor links
    section1Link.addEventListener('click', function(event) {
        event.preventDefault();

        const target = document.querySelector('#section1');

        if (target) {
            const offset = 80;
            const targetOffsetTop = target.offsetTop - offset;

            window.scrollTo({
                top: targetOffsetTop,
                behavior: 'smooth'
            });
        }
    });

    section2Link.addEventListener('click', function(event) {
        event.preventDefault();

        const target = document.querySelector('#section2');

        if (target) {
            const offset = 80;
            const targetOffsetTop = target.offsetTop - offset;

            window.scrollTo({
                top: targetOffsetTop,
                behavior: 'smooth'
            });
        }
    });
});
