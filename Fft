$(document).ready(function() {
    let darkMode = localStorage.getItem("dark-mode");

    function setTheme(theme) {
        if (theme === "black") {
            document.getElementById('aStyleLink').href = 'assets/css/black-theme.css';
            document.getElementById('themeIcon').src = 'moon.png'; // Change this to your moon icon
            localStorage.setItem("dark-mode", "black");
        } else {
            document.getElementById('aStyleLink').href = 'assets/css/white-theme.css';
            document.getElementById('themeIcon').src = 'sun.png'; // Change this to your sun icon
            localStorage.setItem("dark-mode", "white");
        }
    }

    $("#themeToggle").click(function() {
        darkMode = (darkMode === "black") ? "white" : "black";
        setTheme(darkMode);
    });

    // Initial theme setup
    if (darkMode === "black") {
        setTheme("black");
    } else {
        setTheme("white"); // Set light theme as default
    }
});
