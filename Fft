// Initialize LightGallery with options
$(document).ready(function() {
  $("#lightgallery").lightGallery({
    download: true, // Enable the download button
    onAfterOpen: function() {
      // Move the download button to the bottom left corner
      var downloadButton = $(".lg-download");
      downloadButton.css({
        "bottom": "10px",
        "left": "10px",
        "top": "auto",
        "right": "auto"
      });
    }
  });
});
