    <div class="row">
        <div class="col">
          <!-- Default Design -->
          <div class="dropdown-container">
            <div class="dropdown-toggle click-dropdown" id="selected-year">
              2023
            </div>
            <div class="dropdown-menu">
              <ul>
                <li><a href="#2023" onclick="showYear('2023', this)">2023</a></li>
                <li><a href="#" onclick="showYear('2022', this)">2022</a></li>
                <li><a href="#" onclick="showYear('2021', this)">2021</a></li>
                <li><a href="#" onclick="showYear('2020', this)">2020</a></li>
                <li><a href="#" onclick="showYear('2019', this)">2019</a></li>
                <li><a href="#" onclick="showYear('2018', this)">2018</a></li>
              </ul>
            </div>
