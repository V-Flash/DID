<?php
$dynamicId = 5; // Replace this with your dynamic ID value
?>

<!DOCTYPE html>
<html>
<head>
    <!-- Your other HTML head content here -->
</head>
<body>
    <!-- Your other HTML body content here -->

    <!-- Container for displaying the text -->
    <div id="outputContainer"></div>

    <!-- Your other HTML body content here -->

    <script>
        // Get the dynamic ID from PHP
        var id = <?php echo $dynamicId; ?>;

        // Function to display text based on ID
        function displayTextWithId(id) {
            var output = '';

            for (var i = 1; i <= id; i++) {
                output += 'hello' + i + ' ';
            }

            return output;
        }

        // Get the container element where you want to display the text
        var container = document.getElementById('outputContainer');

        // Call the function and display the text
        container.textContent = displayTextWithId(id);
    </script>
</body>
</html>
