<!DOCTYPE html>
<html>
<head>
<style>
  .year-container {
    display: none;
  }

  #2023 {
    display: block;
  }

  .active-year {
    font-weight: bold;
  }
</style>
</head>
<body>

<div class="row">
  <div class="col">
    <!-- Default Design -->
    <div class="dropdown-container">
      <div class="dropdown-toggle click-dropdown" id="selected-year">
        2023 <!-- Default year, you can change this if needed -->
      </div>
      <div class="dropdown-menu">
        <ul>
          <li><a href="#" onclick="showYear('2023', this)">2023</a></li>
          <li><a href="#" onclick="showYear('2022', this)">2022</a></li>
          <li><a href="#" onclick="showYear('2021', this)">2021</a></li>
          <li><a href="#" onclick="showYear('2020', this)">2020</a></li>
          <li><a href="#" onclick="showYear('2019', this)">2019</a></li>
          <li><a href="#" onclick="showYear('2018', this)">2018</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<div class="year-container" id="2023">
  <h1>2023</h1>
</div>

<div class="year-container" id="2022">
  <h1>2022</h1>
</div>

<div class="year-container" id="2021">
  <h1>2021</h1>
</div>

<div class="year-container" id="2020">
  <h1>2020</h1>
</div>

<div class="year-container" id="2019">
  <h1>2019</h1>
</div>

<div class="year-container" id="2018">
  <h1>2018</h1>
</div>

<script>
  // Show the specified year and mark it as active
  function showYear(year, link) {
    var yearContainers = document.querySelectorAll('.year-container');
    yearContainers.forEach(function(container) {
      container.style.display = 'none';
    });

    var yearLinks = document.querySelectorAll('.dropdown-menu a');
    yearLinks.forEach(function(yearLink) {
      yearLink.classList.remove('active-year');
    });

    document.getElementById(year).style.display = 'block';
    link.classList.add('active-year');

    // Update the selected year text
    document.getElementById('selected-year').textContent = year;
  }

  // Set the default year to be active
  document.addEventListener('DOMContentLoaded', function() {
    var defaultYearLink = document.querySelector('.dropdown-menu li:first-child a');
    showYear('2023', defaultYearLink);
  });
</script>

</body>
</html>
