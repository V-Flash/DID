<li>
  [checkbox option id:option class:main-cable-checkbox "Cables"]
  <ul>
    [checkbox suboption class:sub-cable-checkbox "LV"]
    [checkbox suboption class:sub-cable-checkbox "HV"]
    [checkbox suboption class:sub-cable-checkbox "EHV"]
  </ul>
</li>
jQuery(document).ready(function($) {
  $('.main-cable-checkbox').on('click', function() {
    var subCheckboxes = $('.sub-cable-checkbox');

    for (var i = 0; i < subCheckboxes.length; i++) {
      subCheckboxes[i].checked = this.checked;
    }
  });
});
